<Window x:Class="HM3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:HM3"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Минимальное число:" FontSize="16" />
                <TextBox Name="iud_Min"
                    Width="150"
                    Margin="50,0,0,0"
                    Height="17"
                    Text="20"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label Content="Максимальное число:" FontSize="16" />
                <TextBox Name="iud_Max"
    Width="150"
    Margin="50,0,0,0"
    Height="17"
    Text="20"></TextBox>
            </StackPanel>
            <Label
                Margin="0,20,0,0"
                Content="Квадраты чисел"
                FontSize="20"
                FontWeight="Bold" />
            <ScrollViewer Height="300">
                <TextBlock
                    Name="txbk_Squares"
                    Width="360"
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap" />
            </ScrollViewer>

            <Button
                Name="bt_Start"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_Start_Click"
                Content="Старт"
                FontSize="16" />
            <Button
                Name="bt_Pause"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_Pause_Click"
                Content="Пауза"
                FontSize="16"
                IsEnabled="False" />
            <Button
                Name="bt_Stop"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_Stop_Click"
                Content="Стоп"
                FontSize="16"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" Height="75">
                <Label
                    Margin="0,40,0,0"
                    Content="Число:"
                    FontSize="16" />
                <TextBox Name="iud_Total"
                    Width="150"
                    Margin="100,40,0,0"
                    Height="17"
                    Text="15" />
            </StackPanel>
            
            <Label
                Margin="0,20,0,0"
                Content="Факториалы чисел"
                FontSize="20"
                FontWeight="Bold" />
            <ScrollViewer Height="300">
                <TextBlock
                    Name="txbk_Factorials"
                    Width="360"
                    Margin="5"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    TextWrapping="Wrap" />
            </ScrollViewer>
            <Button
                Name="bt_FactorialStart"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_FactorialStart_Click"
                Content="Старт"
                FontSize="16" />
            <Button
                Name="bt_FactorialPause"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_FactorialPause_Click"
                Content="Пауза"
                FontSize="16"
                IsEnabled="False" />
            <Button
                Name="bt_FactorialStop"
                Width="140"
                Height="30"
                Margin="0,20,0,0"
                Click="bt_FactorialStop_Click"
                Content="Стоп"
                FontSize="16"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
