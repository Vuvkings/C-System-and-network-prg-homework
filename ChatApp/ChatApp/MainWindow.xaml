<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

            <Button Content="Войти" Click="OnLoginClick" Margin="0,0,0,10"/>
            <Button Content="Регистрация" Click="OnRegisterClick"/>
            <TextBlock x:Name="StatusText" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
